
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F8FF" >

    <FrameLayout
        android:id="@+id/main_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/football_dialog_top" >

        <TextView
            android:id="@+id/typeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="投注详情"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/repay"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/backbtn_selector"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="支付"
            android:textColor="#fff"
            android:textSize="18sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_buyrecored_ddnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:text="订单编号："
        android:textColor="#4d4d4d"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_buyrecored_ddata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="#4d4d4d"
        android:textSize="14sp"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:text="投注时间：" />

    <TextView
        android:id="@+id/tv_buyrecored_dmony"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="#4d4d4d"
        android:textSize="14sp"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:text="投注总金额：" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_buyrecored_cptb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_buyrecored_qihao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4d4d4d"
        		android:textSize="14sp"
                android:text="" />

            <TextView
                android:id="@+id/tv_buyrecored_tdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4d4d4d"
        		android:textSize="14sp"
                android:text="" />

            <TextView
                android:id="@+id/tv_buyrecordd_dtype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4d4d4d"
        		android:textSize="14sp"
                android:text="" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lottList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_title"
        android:layout_margin="5dp"
        android:cacheColorHint="#00000000"
        android:divider="@drawable/cp" >
    </ListView>

</LinearLayout>