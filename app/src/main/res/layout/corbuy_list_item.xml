<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/corp_selector" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:orientation="vertical" >

        <!-- <TextView -->
        <!-- android:id="@+id/process" -->
        <!-- android:layout_width="wrap_content" -->
        <!-- android:layout_height="wrap_content" -->
        <!-- android:layout_centerInParent="true" -->
        <!-- android:gravity="center" -->
        <!-- android:text="95" -->
        <!-- android:textColor="#EE4000" -->
        <!-- android:textSize="30sp" /> -->

        <com.pkx.lottery.view.CircleProgressBar
            android:id="@+id/process"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

<!--         <TextView -->
<!--             android:id="@+id/keep_count" -->
<!--             android:layout_width="match_parent" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:gravity="center" -->
<!--             android:text="保24%" -->
<!--             android:textColor="#008B00" -->
<!--             android:textSize="10sp" /> -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发起人:"
                android:textColor="#292929" />

            <TextView
                android:id="@+id/corperName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="匿名用户"
                android:textColor="#292929" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <TextView
                android:id="@+id/total_price"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="方案金额:8元"
                android:textColor="#696969"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/rest_count"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="未认购:2元"
                android:textColor="#696969"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp" >

            <TextView
                android:id="@+id/lottery_type"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="双色球"
                android:textColor="#696969"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/commission"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="佣10%"
                android:textColor="#696969"
                android:textSize="13sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="订单处理中"
                android:textColor="#696969"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:src="@drawable/list_arrow" />

</LinearLayout>