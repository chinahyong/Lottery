<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F8F8FF" >

    <LinearLayout
        android:background="@drawable/corp_top_rect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_buyrecored_ddnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5px"
            android:layout_marginBottom="5px"
            android:textColor="#4d4d4d"
            android:textSize="14sp"
            android:visibility="gone"
            android:text="订单详情" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/record_title_bg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="订单详情"
                    android:textColor="#4d4d4d"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="7"
                android:background="@drawable/record_line" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:visibility="gone" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="订单号:"
                android:textColor="#4d4d4d" />

            <TextView
                android:id="@+id/orderID"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text="3462345736835735"
                android:textColor="#828282" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="支付时间:"
                android:textColor="#4d4d4d" />

            <TextView
                android:id="@+id/payTime"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text="2104-04-05 11:55:10"
                android:textColor="#828282" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/priceView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="投注金额:"
                android:textColor="#4d4d4d" />

            <TextView
                android:id="@+id/payPrice"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text="2.00元"
                android:textColor="#828282" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="中奖状态:"
                android:textColor="#4d4d4d" />

            <TextView
                android:id="@+id/bund"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text="--"
                android:textColor="#828282" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="订单状态:"
                android:textColor="#4d4d4d" />

            <TextView
                android:id="@+id/orderStatus"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text="出票成功"
                android:textColor="#828282" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/record_title_bg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="投注内容"
                    android:textColor="#4d4d4d"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="7"
                android:background="@drawable/record_line" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="票号:"
                android:textColor="#4d4d4d" />

            <TextView
                android:id="@+id/tv_lottdatail_piaohao"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text=" "
                android:textColor="#828282"
            />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="投注内容:"
                android:textColor="#4d4d4d" />

            <TextView
                android:id="@+id/betInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:text="02 10 15 16 18 23 26 ,13"
                android:textColor="#828282" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="倍数:"
                android:textColor="#4d4d4d" />

            <TextView
                android:id="@+id/buyMulty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="1倍"
                android:textColor="#828282" />

            <TextView
                android:id="@+id/tv_lott_datail_fs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#828282"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/record_title_bg" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="开奖信息"
                    android:textColor="#4d4d4d"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="7"
                android:background="@drawable/record_line" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="30dp" >

            <TextView
                android:id="@+id/prizeInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center"
                android:text="等待开奖"
                android:textColor="#4d4d4d"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/ll_lott_detail_kjjl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px" >

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>